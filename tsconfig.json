{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "swc": true,
    "transpileOnly": true
  },
  "include": ["src/**/*"]
}
